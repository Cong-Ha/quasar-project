{
  "name": "quasar-project",
  "version": "0.0.1",
  "description": "Screen recording and video viewing app",
  "productName": "Scouter",
  "author": "Cong Ha <Hausmc@live.com>",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint -c ./eslint.config.js \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"No test specified\" && exit 0",
    "dev": "quasar dev",
    "dev:electron": "quasar dev -m electron",
    "dev:ios": "quasar dev -m capacitor -T ios",
    "dev:android": "quasar dev -m capacitor -T android",
    "build": "quasar build",
    "build:electron": "quasar build -m electron",
    "build:ios": "quasar build -m capacitor -T ios",
    "build:ios:xcode": "quasar build -m capacitor -T ios --ide",
    "build:ios:simulator": "quasar build -m capacitor -T ios && open src-capacitor/ios/App/App.xcworkspace",
    "build:android": "quasar build -m capacitor -T android",
    "postinstall": "quasar prepare",
    "cap:sync": "cd src-capacitor && npx cap sync",
    "cap:copy": "cd src-capacitor && npx cap copy",
    "cap:clean": "rm -rf src-capacitor && quasar mode add capacitor"
  },
  "dependencies": {
    "@capacitor/dialog": "^7.0.1",
    "@capacitor/filesystem": "^7.1.1",
    "@capacitor/share": "^7.0.1",
    "@quasar/cli": "^2.5.0",
    "@quasar/extras": "^1.16.4",
    "axios": "^1.2.1",
    "pinia": "^3.0.1",
    "quasar": "^2.16.0",
    "vue": "^3.4.18",
    "vue-i18n": "^11.0.0",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@eslint/js": "^9.14.0",
    "@intlify/unplugin-vue-i18n": "^4.0.0",
    "@quasar/app-vite": "^2.2.1",
    "@types/node": "^20.5.9",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "autoprefixer": "^10.4.2",
    "electron": "^36.4.0",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "typescript": "~5.5.3",
    "vite-plugin-checker": "^0.9.0",
    "vue-tsc": "^2.0.29"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
